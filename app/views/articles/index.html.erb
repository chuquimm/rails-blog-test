
<h1>Lista de artículos</h1>
 
<table>
  <tr>
    <th>Título</th>
    <th>Texto</th>
    <th colspan='3'></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Mostrar', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
      <td><%= link_to 'Eliminar', article_path(article),
              method: :delete,
              data: { confirm: 'Estas seguro?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Nuevo artículo', new_article_path %>